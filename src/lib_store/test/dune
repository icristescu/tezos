(executables
 (names test)
 (libraries tezos-base
            tezos-store
            tezos-stdlib-unix
            alcotest-lwt)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_store
                   -open Tezos_stdlib_unix)))

(alias
 (name buildtest)
 (deps test.exe))

(alias
 (name runtest)
 (package tezos-store)
 (action (chdir %{workspace_root} (run %{exe:test.exe}))))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
